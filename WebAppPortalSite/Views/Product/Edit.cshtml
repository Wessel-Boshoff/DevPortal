    @await Html.PartialAsync("_AddEdit.cshtml")
</form>

@section Scripts {
    <script src="~/js/Product/add-edit.js" asp-append-version="true"></script>
    <!-- Validation scripts -->
    <partial name="_ValidationScriptsPartial" />
}
